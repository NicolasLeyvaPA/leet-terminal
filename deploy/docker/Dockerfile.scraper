# Build stage
FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git make

WORKDIR /app/app

COPY go.mod go.sum ./
RUN go mod download

COPY deploy/ .
RUN go install github.com/cosmtrek/air@latest

# Runtime stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates chromium

WORKDIR /root/

COPY --from=builder /app/bin/scraper .

# Set Chrome path for chromedp if needed
ENV CHROME_PATH=/usr/bin/chromium-browser

CMD ["air", "-c", "/app/app/.air.scraper.toml"]
