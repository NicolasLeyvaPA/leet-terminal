# Application Configuration
APP_ENV=development
APP_PORT=8080
APP_NAME=leet-terminal

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=leet_user
DB_PASSWORD=leet_password_change_in_production
DB_NAME=leet_terminal
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Message Queue Configuration (RabbitMQ)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=leet_queue
RABBITMQ_PASSWORD=queue_password_change_in_production
RABBITMQ_VHOST=/

# Asynq (Redis-based queue) Configuration
ASYNQ_REDIS_ADDR=redis:6379
ASYNQ_CONCURRENCY=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_HEARTBEAT_INTERVAL=30s

# Scraper Configuration
SCRAPER_MAX_CONCURRENT=10
SCRAPER_REQUEST_TIMEOUT=30s
SCRAPER_USER_AGENT=LeetTerminal/1.0
SCRAPER_RATE_LIMIT=100
SCRAPER_CACHE_TTL=3600

# External API Keys and URLs
POLYMARKET_API_KEY=
POLYMARKET_API_URL=https://gamma-api.polymarket.com

NEWS_API_KEY=
NEWS_API_URL=https://newsapi.org/v2

KALSHI_API_KEY=
PARALLEL_AI_API_KEY=

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Storage Configuration
UPLOAD_MAX_SIZE=10485760
STORAGE_PATH=/var/lib/leet-terminal/data

# Frontend Configuration (for Vite build)
VITE_API_URL=http://localhost:8080
